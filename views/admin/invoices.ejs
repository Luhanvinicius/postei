<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciar Faturas - Admin - YouTube Automation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">ðŸ“¹ YouTube Automation</a>
            <div class="navbar-nav ms-auto d-flex align-items-center">
                <a class="nav-link" href="/admin/dashboard">Admin</a>
                <a class="nav-link" href="/user/dashboard">Dashboard</a>
                <%- include('../partials/profile-menu') %>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">ðŸ’° Gerenciar Faturas</h1>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-primary"><%= invoices.filter(i => i.status === 'pending').length %></h3>
                        <p class="text-muted mb-0">Pendentes</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-success"><%= invoices.filter(i => i.status === 'paid').length %></h3>
                        <p class="text-muted mb-0">Pagas</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-danger"><%= invoices.filter(i => i.status === 'overdue').length %></h3>
                        <p class="text-muted mb-0">Vencidas</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-info"><%= invoices.length %></h3>
                        <p class="text-muted mb-0">Total</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Todas as Faturas</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>NÃºmero</th>
                                        <th>Cliente</th>
                                        <th>Email</th>
                                        <th>Plano</th>
                                        <th>Valor</th>
                                        <th>Status</th>
                                        <th>Vencimento</th>
                                        <th>Pago em</th>
                                        <th>AÃ§Ãµes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (invoices && invoices.length > 0) { %>
                                        <% invoices.forEach(invoice => { %>
                                            <tr>
                                                <td><%= invoice.id %></td>
                                                <td><%= invoice.invoice_number || 'N/A' %></td>
                                                <td><%= invoice.username %></td>
                                                <td><%= invoice.email %></td>
                                                <td><%= invoice.plan_name %></td>
                                                <td><strong>R$ <%= parseFloat(invoice.amount).toFixed(2) %></strong></td>
                                                <td>
                                                    <span class="badge bg-<%= invoice.status === 'paid' ? 'success' : invoice.status === 'overdue' ? 'danger' : 'warning' %>">
                                                        <%= invoice.status === 'paid' ? 'Pago' : invoice.status === 'overdue' ? 'Vencido' : 'Pendente' %>
                                                    </span>
                                                </td>
                                                <td><%= invoice.due_date ? new Date(invoice.due_date).toLocaleDateString('pt-BR') : 'N/A' %></td>
                                                <td><%= invoice.paid_at ? new Date(invoice.paid_at).toLocaleDateString('pt-BR') : '-' %></td>
                                                <td>
                                                    <a href="/payment/invoice/<%= invoice.id %>" class="btn btn-sm btn-outline-primary" target="_blank">
                                                        <i class="bi bi-eye me-1"></i>Ver
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="10" class="text-center text-muted">Nenhuma fatura encontrada.</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

