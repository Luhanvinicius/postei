<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciar Usuários - postei.pro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .admin-table {
            background: var(--bg-card);
            border-radius: var(--radius-lg);
            overflow: hidden;
        }
        
        .admin-table .table {
            margin: 0;
            color: var(--text-primary);
        }
        
        .admin-table .table thead {
            background: rgba(255, 0, 0, 0.1);
        }
        
        .admin-table .table thead th {
            color: var(--text-primary);
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 1px;
            padding: 1.25rem 1rem;
            border: none;
        }
        
        .admin-table .table tbody tr {
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            transition: var(--transition-fast);
        }
        
        .admin-table .table tbody tr:hover {
            background: var(--bg-card-hover);
        }
        
        .admin-table .table tbody td {
            padding: 1.25rem 1rem;
            color: var(--text-primary);
            border: none;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar') %>

    <main class="container mt-5 mb-5">
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h1 class="mb-2">
                            <i class="bi bi-people me-2"></i>
                            Gerenciar Usuários
                        </h1>
                        <p class="text-secondary mb-0">Visualize e gerencie todos os usuários da plataforma</p>
                    </div>
                    <button class="btn btn-gradient" data-bs-toggle="modal" data-bs-target="#createUserModal">
                        <i class="bi bi-plus-circle me-2"></i>
                        Novo Usuário
                    </button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card admin-table">
                    <div class="card-header d-flex justify-content-between align-items-center" style="background: var(--bg-card); border-bottom: 1px solid rgba(255, 255, 255, 0.1); padding: 1.5rem;">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="bi bi-list-ul me-2" style="color: var(--accent);"></i>
                            Lista de Usuários
                        </h5>
                        <span class="badge" style="background: rgba(255, 255, 255, 0.1); color: var(--text-secondary);">
                            Total: <%= users.length %>
                        </span>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Usuário</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Status Pagamento</th>
                                        <th>Criado em</th>
                                        <th class="text-end">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (users && users.length > 0) { %>
                                        <% users.forEach(u => { %>
                                            <tr>
                                                <td>
                                                    <span class="badge" style="background: rgba(255, 255, 255, 0.1); color: var(--text-secondary);">
                                                        #<%= u.id %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <strong class="text-white"><%= u.username %></strong>
                                                </td>
                                                <td class="text-white"><%= u.email %></td>
                                                <td>
                                                    <% if (u.role === 'admin') { %>
                                                        <span class="badge badge-success">
                                                            <i class="bi bi-shield-check me-1"></i>Admin
                                                        </span>
                                                    <% } else { %>
                                                        <span class="badge" style="background: rgba(0, 212, 255, 0.2); border: 1px solid var(--accent); color: var(--accent);">
                                                            <i class="bi bi-person me-1"></i>User
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% const paymentStatus = u.payment_status || 'pending'; %>
                                                    <% if (paymentStatus === 'paid') { %>
                                                        <span class="badge badge-success">
                                                            <i class="bi bi-check-circle me-1"></i>Pago
                                                        </span>
                                                    <% } else { %>
                                                        <span class="badge badge-warning">
                                                            <i class="bi bi-clock me-1"></i>Pendente
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td style="color: var(--text-secondary);">
                                                    <%= u.created_at ? new Date(u.created_at).toLocaleDateString('pt-BR') : 'N/A' %>
                                                </td>
                                                <td class="text-end">
                                                    <button class="btn btn-sm btn-danger" onclick="deleteUser(<%= u.id %>)">
                                                        <i class="bi bi-trash me-1"></i>
                                                        Deletar
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="7" class="text-center text-secondary py-5">
                                                <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.3;"></i>
                                                <p class="mt-3 mb-0">Nenhum usuário encontrado</p>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Modal Criar Usuário -->
    <div class="modal fade" id="createUserModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-person-plus me-2"></i>
                        Criar Novo Usuário
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="createUserForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Usuário</label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent border-end-0" style="border-color: rgba(255, 255, 255, 0.1);">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input type="text" class="form-control border-start-0" name="username" required placeholder="Nome de usuário">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent border-end-0" style="border-color: rgba(255, 255, 255, 0.1);">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input type="email" class="form-control border-start-0" name="email" required placeholder="email@exemplo.com">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Senha</label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent border-end-0" style="border-color: rgba(255, 255, 255, 0.1);">
                                    <i class="bi bi-lock"></i>
                                </span>
                                <input type="password" class="form-control border-start-0" name="password" required placeholder="Mínimo 6 caracteres">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Role</label>
                            <select class="form-select" name="role">
                                <option value="user">User</option>
                                <option value="admin">Admin</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-gradient">
                            <i class="bi bi-check-circle me-2"></i>
                            Criar Usuário
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/auth.js"></script>
    <script>
        document.getElementById('createUserForm')?.addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const submitBtn = e.target.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Criando...';
            
            try {
                const response = await fetch('/admin/users/create', {
                    method: 'POST',
                    body: formData
                });
                const data = await response.json();
                
                if (data.success) {
                    alert('✅ Usuário criado com sucesso!');
                    location.reload();
                } else {
                    alert('❌ Erro: ' + data.error);
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = originalText;
                }
            } catch (error) {
                alert('❌ Erro ao criar usuário');
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            }
        });

        async function deleteUser(userId) {
            if (!confirm('⚠️ Tem certeza que deseja deletar este usuário? Esta ação não pode ser desfeita.')) return;
            
            try {
                const response = await fetch(`/admin/users/${userId}`, {
                    method: 'DELETE'
                });
                const data = await response.json();
                
                if (data.success) {
                    alert('✅ Usuário deletado com sucesso!');
                    location.reload();
                } else {
                    alert('❌ Erro: ' + data.error);
                }
            } catch (error) {
                alert('❌ Erro ao deletar usuário');
            }
        }
    </script>
</body>
</html>
