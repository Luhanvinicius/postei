<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vídeos Publicados - Admin - postei.pro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/"><span class="text-gradient">postei.pro</span></a>
            <div class="navbar-nav ms-auto d-flex align-items-center">
                <a class="nav-link" href="/admin/dashboard">Admin</a>
                <a class="nav-link" href="/admin/users">Usuários</a>
                <a class="nav-link" href="/admin/invoices">Faturas</a>
                <a class="nav-link active" href="/admin/videos">Vídeos</a>
                <%- include('../partials/profile-menu') %>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-2">
                    <i class="bi bi-play-circle me-2"></i>
                    Vídeos Publicados
                </h1>
                <p class="text-secondary mb-4">Visualize todos os vídeos publicados na plataforma</p>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <div class="mb-2">
                            <i class="bi bi-film" style="font-size: 2rem; color: var(--accent);"></i>
                        </div>
                        <div class="stat-number" style="font-size: 2.5rem;"><%= videos.length %></div>
                        <p class="stat-label mb-0">Total de Vídeos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <div class="mb-2">
                            <i class="bi bi-link-45deg" style="font-size: 2rem; color: var(--accent-purple);"></i>
                        </div>
                        <div class="stat-number" style="font-size: 2.5rem;"><%= videos.filter(v => v.video_url).length %></div>
                        <p class="stat-label mb-0">Com Link do YouTube</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-info"><%= new Set(videos.map(v => v.user_id)).size %></h3>
                        <p class="text-muted mb-0">Usuários Diferentes</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Todos os Vídeos Publicados</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Thumbnail</th>
                                        <th>Título</th>
                                        <th>Usuário</th>
                                        <th>Email</th>
                                        <th>Publicado em</th>
                                        <th>YouTube</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (videos && videos.length > 0) { %>
                                        <% videos.forEach(video => { %>
                                            <tr>
                                                <td>
                                                    <% if (video.video_id) { %>
                                                        <img src="https://img.youtube.com/vi/<%= video.video_id %>/maxresdefault.jpg" 
                                                             alt="Thumbnail" 
                                                             class="img-thumbnail" 
                                                             style="width: 120px; height: 68px; object-fit: cover;"
                                                             onerror="this.src='https://img.youtube.com/vi/<%= video.video_id %>/hqdefault.jpg';">
                                                    <% } else { %>
                                                        <span class="text-muted">Sem thumbnail</span>
                                                    <% } %>
                                                </td>
                                                <td class="text-white">
                                                    <strong><%= video.title %></strong>
                                                    <% if (video.description) { %>
                                                        <br><small class="text-white" style="opacity: 0.8;"><%= video.description.substring(0, 80) %><% if (video.description.length > 80) { %>...<% } %></small>
                                                    <% } %>
                                                </td>
                                                <td class="text-white"><%= video.username || 'N/A' %></td>
                                                <td class="text-white"><%= video.user_email || 'N/A' %></td>
                                                <td class="text-white"><%= new Date(video.published_at).toLocaleString('pt-BR') %></td>
                                                <td>
                                                    <% if (video.video_url) { %>
                                                        <a href="<%= video.video_url %>" target="_blank" class="btn btn-sm btn-success">
                                                            <i class="bi bi-youtube me-1"></i>Ver
                                                        </a>
                                                    <% } else { %>
                                                        <span class="text-muted">-</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <button class="btn btn-sm btn-danger" onclick="deleteVideoFiles(<%= video.id %>)">
                                                        <i class="bi bi-trash me-1"></i>Deletar Arquivo
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="7" class="text-center text-muted">Nenhum vídeo publicado ainda.</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/auth.js"></script>
    <script>
        async function deleteVideoFiles(videoId) {
            if (!confirm('Tem certeza que deseja deletar o arquivo físico deste vídeo?\n\nO registro permanecerá no banco de dados, mas o arquivo MP4 será removido do servidor.')) return;
            
            try {
                const response = await fetch(`/admin/videos/${videoId}`, {
                    method: 'DELETE'
                });
                const data = await response.json();
                
                if (data.success) {
                    alert(data.message || 'Arquivos deletados com sucesso! O registro foi mantido no banco.');
                    location.reload();
                } else {
                    alert('Erro: ' + data.error);
                }
            } catch (error) {
                alert('Erro ao deletar arquivos');
                console.error(error);
            }
        }
    </script>
</body>
</html>

