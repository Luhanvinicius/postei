<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>V√≠deos Publicados - Admin - YouTube Automation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">üìπ YouTube Automation</a>
            <div class="navbar-nav ms-auto d-flex align-items-center">
                <a class="nav-link active" href="/admin/dashboard">Admin</a>
                <a class="nav-link" href="/user/dashboard">Dashboard</a>
                <a class="nav-link" href="/admin/invoices">Faturas</a>
                <a class="nav-link" href="/admin/videos">V√≠deos</a>
                <%- include('../partials/profile-menu') %>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">üìπ V√≠deos Publicados</h1>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-primary"><%= videos.length %></h3>
                        <p class="text-muted mb-0">Total de V√≠deos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-success"><%= videos.filter(v => v.video_url).length %></h3>
                        <p class="text-muted mb-0">Com Link do YouTube</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-info"><%= new Set(videos.map(v => v.user_id)).size %></h3>
                        <p class="text-muted mb-0">Usu√°rios Diferentes</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Todos os V√≠deos Publicados</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Thumbnail</th>
                                        <th>T√≠tulo</th>
                                        <th>Usu√°rio</th>
                                        <th>Email</th>
                                        <th>Publicado em</th>
                                        <th>YouTube</th>
                                        <th>A√ß√µes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (videos && videos.length > 0) { %>
                                        <% videos.forEach(video => { %>
                                            <tr>
                                                <td>
                                                    <% if (video.video_id) { %>
                                                        <img src="https://img.youtube.com/vi/<%= video.video_id %>/maxresdefault.jpg" 
                                                             alt="Thumbnail" 
                                                             class="img-thumbnail" 
                                                             style="width: 120px; height: 68px; object-fit: cover;"
                                                             onerror="this.src='https://img.youtube.com/vi/<%= video.video_id %>/hqdefault.jpg';">
                                                    <% } else { %>
                                                        <span class="text-muted">Sem thumbnail</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <strong><%= video.title %></strong>
                                                    <% if (video.description) { %>
                                                        <br><small class="text-muted"><%= video.description.substring(0, 80) %><% if (video.description.length > 80) { %>...<% } %></small>
                                                    <% } %>
                                                </td>
                                                <td><%= video.username || 'N/A' %></td>
                                                <td><%= video.user_email || 'N/A' %></td>
                                                <td><%= new Date(video.published_at).toLocaleString('pt-BR') %></td>
                                                <td>
                                                    <% if (video.video_url) { %>
                                                        <a href="<%= video.video_url %>" target="_blank" class="btn btn-sm btn-success">
                                                            <i class="bi bi-youtube me-1"></i>Ver
                                                        </a>
                                                    <% } else { %>
                                                        <span class="text-muted">-</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <button class="btn btn-sm btn-danger" onclick="deleteVideo(<%= video.id %>)">
                                                        <i class="bi bi-trash me-1"></i>Deletar
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="7" class="text-center text-muted">Nenhum v√≠deo publicado ainda.</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function deleteVideo(videoId) {
            if (!confirm('Tem certeza que deseja deletar este v√≠deo? Esta a√ß√£o n√£o pode ser desfeita.')) return;
            
            try {
                const response = await fetch(`/admin/videos/${videoId}`, {
                    method: 'DELETE'
                });
                const data = await response.json();
                
                if (data.success) {
                    alert('V√≠deo deletado com sucesso!');
                    location.reload();
                } else {
                    alert('Erro: ' + data.error);
                }
            } catch (error) {
                alert('Erro ao deletar v√≠deo');
                console.error(error);
            }
        }
    </script>
</body>
</html>

