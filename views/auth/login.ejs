<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - postei.pro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <span class="text-gradient">postei.pro</span>
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">Voltar</a>
            </div>
        </div>
    </nav>

    <main class="container">
        <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
            <div class="col-md-5 col-lg-4">
                <div class="card animate-fade-in">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <i class="bi bi-box-arrow-in-right" style="font-size: 3rem; background: var(--gradient-accent); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;"></i>
                            </div>
                            <h2 class="text-gradient mb-2">Bem-vindo de volta</h2>
                            <p class="text-secondary">Entre na sua conta para continuar</p>
                        </div>

                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <%= error %>
                            </div>
                        <% } %>

                        <% if (typeof isAuthenticated !== 'undefined' && isAuthenticated) { %>
                            <div class="alert alert-warning text-center">
                                Você já está logado como <strong><%= user.username %></strong>.
                                <form action="/auth/logout" method="POST" class="d-inline ms-2">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Sair</button>
                                </form>
                            </div>
                        <% } %>

                        <form action="/auth/login" method="POST">
                            <div class="mb-3">
                                <label for="username" class="form-label">Usuário</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-transparent border-end-0" style="border-color: rgba(255, 255, 255, 0.1);">
                                        <i class="bi bi-person"></i>
                                    </span>
                                    <input type="text" class="form-control border-start-0" id="username" name="username" required placeholder="Seu usuário">
                                </div>
                            </div>
                            <div class="mb-4">
                                <label for="password" class="form-label">Senha</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-transparent border-end-0" style="border-color: rgba(255, 255, 255, 0.1);">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input type="password" class="form-control border-start-0" id="password" name="password" required placeholder="Sua senha">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-gradient w-100 mb-3">
                                <i class="bi bi-box-arrow-in-right me-2"></i>
                                Entrar
                            </button>
                        </form>

                        <div class="text-center">
                            <p class="text-secondary mb-0">
                                Não tem uma conta? 
                                <a href="/auth/register" class="text-gradient">Criar conta</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
