<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout - <%= plan.name %> - postei.pro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <main class="container my-5">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">Dados para Faturamento</h4>
                    </div>
                    <div class="card-body">
                        <form id="checkoutForm">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Nome Completo *</label>
                                    <input type="text" class="form-control" name="name" required value="<%= user.username %>">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Email *</label>
                                    <input type="email" class="form-control" name="email" required value="<%= user.email %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">CPF/CNPJ *</label>
                                    <input type="text" class="form-control" name="cpfCnpj" required placeholder="000.000.000-00">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Telefone *</label>
                                    <input type="text" class="form-control" name="phone" required placeholder="(00) 00000-0000">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">CEP</label>
                                    <input type="text" class="form-control" name="postalCode" placeholder="00000-000">
                                </div>
                                <div class="col-md-8 mb-3">
                                    <label class="form-label">Endere√ßo</label>
                                    <input type="text" class="form-control" name="address" placeholder="Rua, Avenida, etc">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">N√∫mero</label>
                                    <input type="text" class="form-control" name="addressNumber">
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Complemento</label>
                                    <input type="text" class="form-control" name="complement">
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Bairro</label>
                                    <input type="text" class="form-control" name="province">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Cidade</label>
                                    <input type="text" class="form-control" name="city">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Estado</label>
                                    <input type="text" class="form-control" name="state" maxlength="2" placeholder="SP">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">M√©todo de Pagamento *</label>
                                <div class="row">
                                    <div class="col-md-4 mb-2">
                                        <input type="radio" class="btn-check" name="paymentMethod" id="pix" value="PIX" checked>
                                        <label class="btn btn-outline-primary w-100" for="pix">
                                            <i class="bi bi-qr-code me-2"></i>PIX
                                        </label>
                                    </div>
                                    <div class="col-md-4 mb-2">
                                        <input type="radio" class="btn-check" name="paymentMethod" id="boleto" value="BOLETO">
                                        <label class="btn btn-outline-primary w-100" for="boleto">
                                            <i class="bi bi-receipt me-2"></i>Boleto
                                        </label>
                                    </div>
                                    <div class="col-md-4 mb-2">
                                        <input type="radio" class="btn-check" name="paymentMethod" id="creditCard" value="CREDIT_CARD">
                                        <label class="btn btn-outline-primary w-100" for="creditCard">
                                            <i class="bi bi-credit-card me-2"></i>Cart√£o
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="bi bi-credit-card me-2"></i>Gerar Pagamento e Finalizar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Resumo do Pedido</h5>
                    </div>
                    <div class="card-body">
                        <h4><%= plan.name || 'Plano' %></h4>
                        <% 
                        const planPrice = plan.price ? parseFloat(plan.price) : 0;
                        const billingText = plan.billing_period === 'yearly' || plan.billing_period === 'annual' ? '/ano' : '/m√™s';
                        %>
                        <p class="text-muted mb-3">R$ <%= planPrice.toFixed(2) %><%= billingText %></p>
                        <hr>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <strong>R$ <%= planPrice.toFixed(2) %></strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Total:</span>
                            <strong class="text-primary">R$ <%= planPrice.toFixed(2) %></strong>
                        </div>
                        <div id="pixSection" style="display: none;">
                            <hr>
                            <h6>PIX Gerado</h6>
                            <div id="pixQrCode" class="text-center mb-3"></div>
                            <div class="mb-3">
                                <label class="form-label">Chave PIX (Copiar e Colar):</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="pixCopyPaste" readonly>
                                    <button class="btn btn-outline-secondary" type="button" onclick="copyPix()">
                                        <i class="bi bi-clipboard"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                Ap√≥s o pagamento, sua assinatura ser√° ativada automaticamente.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/auth.js"></script>
    <script>
        document.getElementById('checkoutForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            e.stopPropagation();
            
            console.log('üìù Formul√°rio submetido');
            
            const formData = new FormData(e.target);
            const paymentMethod = formData.get('paymentMethod') || 'PIX';
            
            console.log('üí≥ M√©todo de pagamento selecionado:', paymentMethod);
            
            const submitBtn = e.target.querySelector('button[type="submit"]');
            const originalBtnText = submitBtn.innerHTML;
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Processando...';

            try {
                // Converter FormData para JSON para incluir paymentMethod
                const formDataObj = {};
                formData.forEach((value, key) => {
                    formDataObj[key] = value;
                });
                formDataObj.paymentMethod = paymentMethod;
                
                console.log('üì§ Enviando dados do checkout:', formDataObj);
                
                const planSlug = '<%= plan.slug || plan.id %>';
                const token = '<%= typeof token !== "undefined" && token ? token : "" %>';
                const checkoutUrl = `/payment/checkout/${planSlug}${token ? '?token=' + token : ''}`;
                
                console.log('üîó URL do checkout:', checkoutUrl);
                
                const response = await fetch(checkoutUrl, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        <% if (typeof token !== 'undefined' && token) { %>
                        'Authorization': 'Bearer <%= token %>',
                        <% } %>
                    },
                    body: JSON.stringify(formDataObj)
                });
                
                console.log('üì• Resposta recebida:', response.status, response.statusText);
                
                // Verificar tipo de conte√∫do
                const contentType = response.headers.get('content-type');
                console.log('üìÑ Content-Type:', contentType);
                
                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('‚ùå Erro HTTP:', response.status, errorText);
                    throw new Error(`Erro ${response.status}: ${errorText.substring(0, 100)}`);
                }
                
                // Verificar se √© JSON
                if (!contentType || !contentType.includes('application/json')) {
                    const text = await response.text();
                    console.error('‚ùå Resposta n√£o √© JSON:', text.substring(0, 200));
                    throw new Error('Resposta do servidor n√£o √© JSON. Verifique o console para mais detalhes.');
                }
                
                const data = await response.json();
                console.log('‚úÖ Dados recebidos:', data);

                if (data.success) {
                    // Mostrar QR Code PIX se dispon√≠vel
                    if (data.pixQrCode) {
                        document.getElementById('pixQrCode').innerHTML = `<img src="${data.pixQrCode}" alt="QR Code PIX" class="img-fluid" style="max-width: 300px;">`;
                        document.getElementById('pixCopyPaste').value = data.pixCopyPaste;
                        document.getElementById('pixSection').style.display = 'block';
                        submitBtn.innerHTML = '<i class="bi bi-check-circle me-2"></i>PIX Gerado!';
                    } else {
                        submitBtn.innerHTML = '<i class="bi bi-check-circle me-2"></i>Fatura Criada!';
                    }
                    
                    // Redirecionar para p√°gina de pagamento pendente ap√≥s 1 segundo
                    const tokenParam = token ? `&token=${token}` : '';
                    if (data.invoiceId) {
                        setTimeout(() => {
                            window.location.href = `/payment/pending?invoice=${data.invoiceId}${tokenParam}`;
                        }, 1000);
                    } else {
                        // Se n√£o tiver invoiceId, redirecionar mesmo assim
                        setTimeout(() => {
                            window.location.href = `/payment/pending${token ? '?token=' + token : ''}`;
                        }, 1000);
                    }
                } else {
                    console.error('‚ùå Erro na resposta:', data.error);
                    alert('Erro: ' + (data.error || 'Erro desconhecido'));
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="bi bi-credit-card me-2"></i>Gerar Pagamento e Finalizar';
                }
            } catch (error) {
                console.error('‚ùå Erro ao processar checkout:', error);
                console.error('‚ùå Stack:', error.stack);
                alert('Erro ao processar pagamento: ' + error.message);
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="bi bi-credit-card me-2"></i>Gerar Pagamento e Finalizar';
                // N√£o resetar o formul√°rio - manter os dados preenchidos
            }
        });
        
        // Prevenir reset do formul√°rio
        document.getElementById('checkoutForm').addEventListener('reset', (e) => {
            console.log('‚ö†Ô∏è  Tentativa de reset do formul√°rio bloqueada');
            e.preventDefault();
        });

        function copyPix() {
            const input = document.getElementById('pixCopyPaste');
            input.select();
            document.execCommand('copy');
            alert('Chave PIX copiada!');
        }
    </script>
</body>
</html>

