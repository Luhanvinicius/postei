<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil - postei.pro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .profile-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 3rem 0;
            margin-bottom: 2rem;
        }
        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid white;
            background: rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            font-weight: bold;
            margin: 0 auto 1rem;
        }
        .section-card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }
        .section-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: #333;
        }
        .plan-badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
        }
        .plan-active {
            background: #d4edda;
            color: #155724;
        }
        .invoice-item {
            border-bottom: 1px solid #e9ecef;
            padding: 1rem 0;
        }
        .invoice-item:last-child {
            border-bottom: none;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">üìπ postei.pro</a>
            <div class="navbar-nav ms-auto d-flex align-items-center">
                <% if (user.role === 'admin') { %>
                    <a class="nav-link" href="/admin/dashboard">Admin</a>
                <% } %>
                <a class="nav-link" href="/user/dashboard">Dashboard</a>
                <a class="nav-link" href="/user/videos">V√≠deos</a>
                <a class="nav-link" href="/user/scheduled">Agendados</a>
                <a class="nav-link" href="/user/published">Publicados</a>
                <%- include('../partials/profile-menu') %>
            </div>
        </div>
    </nav>

    <!-- Header do Perfil -->
    <div class="profile-header">
        <div class="container text-center">
            <div class="profile-avatar">
                <%= user.username.charAt(0).toUpperCase() %>
            </div>
            <h2><%= user.username %></h2>
            <p class="mb-0"><%= user.email %></p>
        </div>
    </div>

    <main class="container">
        <!-- Se√ß√£o: Plano Atual -->
        <div id="plano" class="card section-card">
            <div class="card-body p-4">
                <h3 class="section-title">
                    <i class="bi bi-credit-card me-2"></i>Plano Atual
                </h3>
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h4 class="mb-2"><%= plan.name %></h4>
                        <p class="text-muted mb-2">
                            <strong><%= plan.price %></strong> / <%= plan.billing %>
                        </p>
                        <p class="text-muted mb-0">
                            <small>Pr√≥xima cobran√ßa: <%= plan.nextBilling %></small>
                        </p>
                    </div>
                    <div class="col-md-4 text-end">
                        <span class="plan-badge plan-active">
                            <i class="bi bi-check-circle me-1"></i><%= plan.status.toUpperCase() %>
                        </span>
                    </div>
                </div>
                <hr class="my-3">
                <div class="d-flex gap-2">
                    <a href="/user/plans" class="btn btn-primary">
                        <%= plan.status === 'inactive' ? 'Escolher Plano' : 'Alterar Plano' %>
                    </a>
                    <% if (plan.status === 'active') { %>
                    <button class="btn btn-outline-danger" onclick="cancelSubscription()" id="cancelBtn">
                        <i class="bi bi-x-circle me-2"></i>Cancelar Assinatura
                    </button>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Se√ß√£o: Faturas (apenas para usu√°rios, n√£o para admin) -->
        <% if (!isAdmin) { %>
        <div id="faturas" class="card section-card">
            <div class="card-body p-4">
                <h3 class="section-title">
                    <i class="bi bi-receipt me-2"></i>Faturas
                </h3>
                <% if (invoices && invoices.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>N√∫mero</th>
                                    <th>Data</th>
                                    <th>Valor</th>
                                    <th>Status</th>
                                    <th>A√ß√µes</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% invoices.forEach(invoice => { %>
                                    <tr class="invoice-item">
                                        <td><%= invoice.invoice_number || invoice.id %></td>
                                        <td><%= new Date(invoice.created_at).toLocaleDateString('pt-BR') %></td>
                                        <td><strong>R$ <%= parseFloat(invoice.amount).toFixed(2) %></strong></td>
                                        <td>
                                            <span class="badge bg-<%= invoice.status === 'paid' ? 'success' : invoice.status === 'overdue' ? 'danger' : 'warning' %>">
                                                <%= invoice.status === 'paid' ? 'Pago' : invoice.status === 'overdue' ? 'Vencido' : 'Pendente' %>
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/payment/invoice/<%= invoice.id %>" class="btn btn-sm btn-outline-primary" target="_blank">
                                                <i class="bi bi-eye me-1"></i>Ver
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-muted">Nenhuma fatura encontrada.</p>
                <% } %>
            </div>
        </div>
        <% } %>

        <!-- Se√ß√£o: Privacidade -->
        <div id="privacidade" class="card section-card">
            <div class="card-body p-4">
                <h3 class="section-title">
                    <i class="bi bi-shield-lock me-2"></i>Privacidade e Seguran√ßa
                </h3>
                <form id="changePasswordForm">
                    <div class="mb-3">
                        <label class="form-label">Senha Atual</label>
                        <input type="password" class="form-control" name="currentPassword" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Nova Senha</label>
                        <input type="password" class="form-control" name="newPassword" required minlength="6">
                        <small class="form-text text-muted">A senha deve ter no m√≠nimo 6 caracteres</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirmar Nova Senha</label>
                        <input type="password" class="form-control" name="confirmPassword" required minlength="6">
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-key me-1"></i>Alterar Senha
                    </button>
                </form>
                <div id="passwordMessage" class="mt-3"></div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('changePasswordForm')?.addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const messageDiv = document.getElementById('passwordMessage');
            
            const newPassword = formData.get('newPassword');
            const confirmPassword = formData.get('confirmPassword');
            
            if (newPassword !== confirmPassword) {
                messageDiv.innerHTML = '<div class="alert alert-danger">As senhas n√£o coincidem!</div>';
                return;
            }
            
            try {
                const response = await fetch('/user/profile/change-password', {
                    method: 'POST',
                    body: formData
                });
                const data = await response.json();
                
                if (data.success) {
                    messageDiv.innerHTML = '<div class="alert alert-success">Senha alterada com sucesso!</div>';
                    e.target.reset();
                } else {
                    messageDiv.innerHTML = `<div class="alert alert-danger">${data.error}</div>`;
                }
            } catch (error) {
                messageDiv.innerHTML = '<div class="alert alert-danger">Erro ao alterar senha. Tente novamente.</div>';
            }
        });

        // Cancelar assinatura
        async function cancelSubscription() {
            if (!confirm('Tem certeza que deseja cancelar sua assinatura? Voc√™ ainda ter√° acesso at√© o final do per√≠odo pago, mas n√£o haver√° renova√ß√µes autom√°ticas.')) {
                return;
            }

            const btn = document.getElementById('cancelBtn');
            if (btn) {
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Cancelando...';
            }

            try {
                const response = await fetch('/user/subscription/cancel', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();

                if (data.success) {
                    alert('‚úÖ ' + data.message);
                    location.reload();
                } else {
                    alert('‚ùå Erro: ' + data.error);
                    if (btn) {
                        btn.disabled = false;
                        btn.innerHTML = '<i class="bi bi-x-circle me-2"></i>Cancelar Assinatura';
                    }
                }
            } catch (error) {
                console.error('Erro ao cancelar assinatura:', error);
                alert('‚ùå Erro ao cancelar assinatura: ' + error.message);
                if (btn) {
                    btn.disabled = false;
                    btn.innerHTML = '<i class="bi bi-x-circle me-2"></i>Cancelar Assinatura';
                }
            }
        }
    </script>
</body>
</html>

