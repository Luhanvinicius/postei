<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VÃ­deos Publicados - YouTube Automation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">ðŸ“¹ YouTube Automation</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/user/dashboard">Dashboard</a>
                <a class="nav-link" href="/user/accounts">Vincular Contas</a>
                <a class="nav-link" href="/user/videos">VÃ­deos</a>
                <a class="nav-link" href="/user/scheduled">Agendados</a>
                <a class="nav-link active" href="/user/published">Publicados</a>
                <span class="navbar-text me-3">OlÃ¡, <strong><%= user.username %></strong></span>
                <form action="/auth/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-link nav-link text-white">Sair</button>
                </form>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">âœ… VÃ­deos Publicados</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <% if (videos && videos.length > 0) { %>
                            <div class="row">
                                <% videos.forEach(video => { %>
                                    <div class="col-md-6 col-lg-4 mb-4">
                                        <div class="card h-100">
                                            <% if (video.video_id) { %>
                                                <a href="<%= video.video_url %>" target="_blank" style="text-decoration: none;">
                                                    <img src="https://img.youtube.com/vi/<%= video.video_id %>/maxresdefault.jpg" 
                                                         alt="Thumbnail" 
                                                         class="card-img-top" 
                                                         style="width: 100%; height: 200px; object-fit: cover; cursor: pointer;"
                                                         onerror="this.src='https://img.youtube.com/vi/<%= video.video_id %>/hqdefault.jpg';">
                                                </a>
                                            <% } else { %>
                                                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                                    <span class="text-white">Sem miniatura</span>
                                                </div>
                                            <% } %>
                                            <div class="card-body">
                                                <h5 class="card-title"><%= video.title %></h5>
                                                <% if (video.description) { %>
                                                    <p class="card-text text-muted small">
                                                        <%= video.description.substring(0, 150) %><% if (video.description.length > 150) { %>...<% } %>
                                                    </p>
                                                <% } %>
                                                <p class="card-text">
                                                    <small class="text-muted">
                                                        ðŸ“… <%= new Date(video.published_at).toLocaleString('pt-BR') %>
                                                    </small>
                                                </p>
                                            </div>
                                            <div class="card-footer">
                                                <a href="<%= video.video_url %>" 
                                                   target="_blank" 
                                                   class="btn btn-success btn-sm w-100">
                                                    â–¶ Ver no YouTube
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <div class="mb-3">
                                    <span style="font-size: 64px;">âœ…</span>
                                </div>
                                <p class="text-muted fs-5">Nenhum vÃ­deo publicado ainda.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

