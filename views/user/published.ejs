                <a class="nav-link" href="/user/videos">VÃ­deos</a>
                <a class="nav-link" href="/user/scheduled">Agendados</a>
                <a class="nav-link active" href="/user/published">Publicados</a>
                <span class="navbar-text me-3">OlÃ¡, <strong><%= user.username %></strong></span>
                <form action="/auth/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-link nav-link text-white">Sair</button>
                </form>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">âœ… VÃ­deos Publicados</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <% if (videos && videos.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>VÃ­deo</th>
                                            <th>TÃ­tulo</th>
                                            <th>Publicado em</th>
                                            <th>AÃ§Ãµes</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% videos.forEach(video => { %>
                                            <tr>
                                                <td>
                                                    <% if (video.video_id) { %>
                                                        <img src="https://img.youtube.com/vi/<%= video.video_id %>/maxresdefault.jpg" 
                                                             alt="Thumbnail" 
                                                             class="img-thumbnail" 
                                                             style="width: 160px; height: 90px; object-fit: cover; cursor: pointer;"
                                                             onerror="this.src='https://img.youtube.com/vi/<%= video.video_id %>/hqdefault.jpg';"
                                                             onclick="window.open('<%= video.video_url %>', '_blank')">
                                                    <% } else { %>
                                                        <span class="text-muted">Sem miniatura</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <strong><%= video.title %></strong>
                                                    <% if (video.description) { %>
                                                        <br><small class="text-muted"><%= video.description.substring(0, 100) %><% if (video.description.length > 100) { %>...<% } %></small>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <%= new Date(video.published_at).toLocaleString('pt-BR') %>
                                                </td>
                                                <td>
                                                    <a href="<%= video.video_url %>" 
                                                       target="_blank" class="btn btn-sm btn-success">
                                                        â–¶ Ver no YouTube
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="text-muted">Nenhum vÃ­deo publicado ainda.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
