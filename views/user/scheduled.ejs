<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VÃ­deos Agendados - YouTube Automation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">ðŸ“¹ YouTube Automation</a>
            <div class="navbar-nav ms-auto d-flex align-items-center">
                <a class="nav-link" href="/user/dashboard">Dashboard</a>
                <a class="nav-link" href="/user/accounts">Vincular Contas</a>
                <a class="nav-link" href="/user/videos">VÃ­deos</a>
                <a class="nav-link active" href="/user/scheduled">Agendados</a>
                <a class="nav-link" href="/user/published">Publicados</a>
                <%- include('../partials/profile-menu') %>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">ðŸ“… VÃ­deos Agendados</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <% if (schedules && schedules.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>VÃ­deo</th>
                                            <th>TÃ­tulo</th>
                                            <th>Agendado para</th>
                                            <th>Status</th>
                                            <th>AÃ§Ãµes</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% schedules.forEach(schedule => { %>
                                            <tr>
                                                <td><%= schedule.video_path.split(/[\\/]/).pop() %></td>
                                                <td><%= schedule.title || 'Sem tÃ­tulo' %></td>
                                                <td>
                                                    <%= new Date(schedule.scheduled_time).toLocaleString('pt-BR') %>
                                                </td>
                                                <td>
                                                    <% if (schedule.status === 'pending') { %>
                                                        <span class="badge bg-warning">Pendente</span>
                                                    <% } else if (schedule.status === 'processing') { %>
                                                        <span class="badge bg-info">Processando</span>
                                                    <% } else if (schedule.status === 'completed') { %>
                                                        <span class="badge bg-success">Publicado</span>
                                                    <% } else if (schedule.status === 'failed') { %>
                                                        <span class="badge bg-danger">Falhou</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (schedule.status === 'completed' && schedule.video_id) { %>
                                                        <a href="https://www.youtube.com/watch?v=<%= schedule.video_id %>" 
                                                           target="_blank" class="btn btn-sm btn-success">
                                                            Ver no YouTube
                                                        </a>
                                                    <% } else if (schedule.status === 'failed') { %>
                                                        <small class="text-danger"><%= schedule.error || 'Erro desconhecido' %></small>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="text-muted">Nenhum vÃ­deo agendado.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

