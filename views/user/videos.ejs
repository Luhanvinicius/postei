                        }
                    });
                    
                    // Se n√£o tiver hor√°rios definidos, usar os padr√£o
                    if (times.length === 0) {
                        const defaultTimes = ['08:00', '12:00', '18:00', '21:00'];
                        times.push(...defaultTimes.slice(0, qtd));
                    }
                    
                    // Calcular data exata do dia
                    const targetDate = new Date(startDateObj);
                    targetDate.setDate(startDateObj.getDate() + dayIndex);
                    
                    scheduleConfig.push({
                        day: dayIndex,
                        date: targetDate.toISOString().split('T')[0], // Data no formato YYYY-MM-DD
                        dateStr: targetDate.toLocaleDateString('pt-BR'),
                        qtd: qtd,
                        times: times.slice(0, qtd) // Limitar aos primeiros N hor√°rios baseado na quantidade
                    });
                }
            }

            // Validar total
            const totalNeeded = scheduleConfig.reduce((sum, day) => sum + day.qtd, 0);
            if (totalNeeded === 0) {
                alert('Por favor, defina pelo menos um v√≠deo para agendar.');
                return;
            }

            if (totalNeeded > currentVideos.length) {
                alert(`Voc√™ precisa de ${totalNeeded} v√≠deos, mas s√≥ tem ${currentVideos.length} dispon√≠veis.`);
                return;
            }

            // Confirmar
            if (!confirm(`Deseja agendar ${totalNeeded} v√≠deos para a semana?\n\nIsso ir√° gerar conte√∫do com IA para cada v√≠deo e agend√°-los automaticamente.`)) {
                return;
            }

            // Desabilitar bot√£o
            const btn = event.target;
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Processando...';

            try {
                // Preparar dados para envio
                const scheduleData = {
                    startDate: startDate,
                    schedule: scheduleConfig,
                    videos: currentVideos.map(v => ({
                        path: v.path,
                        name: v.name
                    }))
                };

                const response = await fetch('/user/videos/schedule-weekly', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(scheduleData)
                });

                const data = await response.json();

                if (data.success) {
                    alert(`‚úÖ ${data.scheduled} v√≠deos agendados com sucesso!`);
                    bootstrap.Modal.getInstance(document.getElementById('weeklyScheduleModal')).hide();
                    // Recarregar p√°gina ou atualizar lista
                    location.reload();
                } else {
                    alert('Erro: ' + data.error);
                    btn.disabled = false;
                    btn.innerHTML = '<i class="bi bi-calendar-check me-1"></i>Agendar Todos';
                }
            } catch (error) {
                console.error('Erro ao processar agendamento semanal:', error);
                alert('Erro ao processar agendamento: ' + error.message);
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-calendar-check me-1"></i>Agendar Todos';
            }
        }
    </script>
